<% layout('layouts/boilerplate') %>

    <body>
        <header>
            <%- include('../partials/twitter-clone-navbar') %>
        </header>
        <main>
            <div class="main-head"><a href="">Home</a></div>

            <div class="main-container">
                <form action="/portfolio/twitter-clone" method="post" class="tweet-form">
                    <div>
                        <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" alt="profile picture">
                        <textarea name="text" id="text" placeholder="What's happening?" required></textarea>
                    </div>
                    <button class="btn">Tweet</button>
                </form>

                <% if (twitterTweets.length) { %>
                    <% twitterTweets.forEach((tweet)=> { %>
                        <div class="tweet-container">
                            <p class="user">
                                @<%= twitterUsers.find(x => x.id === tweet.userId).user %>
                            </p>
                            <p class="tweet">
                                <%= tweet.text %>
                            </p>

                            <% if(tweet.userId === 1) { %>
                              <a href="/portfolio/twitter-clone/<%= `${twitterUsers.find(x => x.id === tweet.userId).id}` %>/<%= `${tweet.id}` %>">Edit</a>
                              <form action="/portfolio/twitter-clone/<%= `${twitterUsers.find(x => x.id === tweet.userId).id}` %>/<%= `${tweet.id}` %>?_method=DELETE"
                                  method="post">
                                  <button>Delete</button>
                              </form>
                              <% } %>
                        </div>
                        <% }); %>
                            <% } %>
            </div>


        </main>
        <footer>

        </footer>
    </body>
